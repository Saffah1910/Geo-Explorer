<div class="quiz">
  <h2>Quiz Time</h2>
      <form action="/quiz/{{this.country}}" method="POST">
  {{#each questionData.questions}}
  <div class="question">
    <p>{{this.question}}</p>
    <div class="countries">
      {{#each options}}
      <div>
        <input type="radio" name="{{../ this.question}}" value="{{this}}">{{this}}
      </div>
      {{/each}}
    </div>
  </div>
  {{/each}}
  <button type="submit">Submit</button>
  {{!-- <button type="submit">Next</button> --}}
</div>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400&family=Poppins:wght@300;400&family=Young+Serif&display=swap');

  body {
    margin: 0;
    padding: 0;
    font-family: sans-serif;
    text-align: center;
  }

  header {
    text-align: center;
  }

  h1 {
    color: #ffcc00;
    background: black;
    opacity: 0.8;
    font-family: "Young Serif";
  }

  @keyframes fadeIn {
    0% {
      opacity: 0;
    }

    100% {
      opacity: 1;
    }
  }


  .animated-heading {
    animation: fadeIn 10s;
  }

  .question {
    display: flex;
    flex-direction: column;
    align-items: center;
  }


  .user-info,
  .flag-recognition,
  .moreInfo,
  .quiz,
  .phrase .problem-solving,
  .leaderboard {
    width: 45%;
    margin: 10px;
    padding: 20px;
    border: 1px solid #dee2e6;
    border-radius: 5px;
  }


  input {
    width: 100%;
    padding: 10px;
    border: 1px solid #ced4da;
    border-radius: 5px;
  }

  footer {
    position: absolute;
    text-align: center;
    bottom: 0;
    width: 100%;
    height: 60px;
    color: white;
  }


  .quiz {
   width: 90%;
  max-width: 400px;
  height: auto;
  background: rgba(255, 255, 255, 0.835);
  border: 1px solid white;
  top: 50%;
  left: 50%;
  position: absolute;
  transform: translate(-50%, -50%);
  box-sizing: border-box;
  color: black ;

  }

  .countries {
    display: flex;
    flex-wrap: wrap;
    width: 50%;
